- pages = pluralize(@page.children.count + 1, 'Page')
%h1
  Remove
  = pages

%p
  Are you sure you want to
  %strong.warning permanently remove
  the following
  = pages.downcase + "?"

.inset
  %table.index#site_map
    %tbody
      = render_node @page, :simple => true

- form_for [:admin, @page.becomes(Page)], :html => {:method => :delete, 'data-onsubmit_status'=>"Removing pages&#8230;"} do
  %p.buttons
    %input.button{:type=>"submit", :value=>"Delete Pages"}/
    or
    = link_to 'Cancel', admin_pages_url